<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303030"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/img_v"
        android:src="@drawable/profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/txt_vnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_v"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Ahmad Ghafirin"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/txt_vpekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txt_vnama"
        android:layout_centerHorizontal="true"
        android:text="Restaurant"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_vphone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="123dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/txt_vphone"
        android:src="@drawable/phone_icon"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/txt_vphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_vpekerjaan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="+6282282733769"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/txt_vmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_vphone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="ahmadghafirin@gmail.com"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_vmail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        android:layout_toLeftOf="@+id/txt_vmail"
        android:src="@drawable/mail_white"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/txt_vup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Address"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/txt_valamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Lampung"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>